
<!DOCTYPE html>

<html lang="en" style="height: auto;">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>POS Manager</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&amp;display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/lib/AdminLTE3/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/lib/AdminLTE3/dist/css/adminlte.min.css">

    @RenderSection("links", required: false)

</head>
<body class="hold-transition sidebar-mini sidebar-collapse" style="font-family: Cambria-R">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item ml-2">
                    <a href="../../Home/Logout" class="btn btn-default m-1 text-truncate" onclick="return confirm('Are you sure you want to log out?')">LogOut</a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4 sidebar-closed sidebar-collapsed">
            <!-- Sidebar -->
            <div class="sidebar sidebar-collapse">
                <!-- Sidebar user (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/lib/AdminLTE3/dist/img/icons8-user-50.png" class="elevation-3" alt="User Image">
                    </div>
                    <div class="info">
                        <a class="d-block">@ViewData["Username"]</a>
                    </div>
                </div>
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                             with font-awesome or any other icon font library -->
                        <li class="nav-item">
                            <a href="../../Home/Index" class="nav-link">
                                <i class="far fa-clipboard nav-icon"></i>
                                <p>Sale Dashboard</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="../../MonthlySales/Index" class="nav-link">
                                <i class="fas fa-chart-pie nav-icon"></i>
                                <p>Monthly Sales</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="../../YearlySales/Index" class="nav-link">
                                <i class="fas fa-chart-bar nav-icon"></i>
                                <p>Yearly Sales</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="../../SalesAnalysis/Index" class="nav-link">
                                <i class="fas fa-chart-line nav-icon"></i>
                                <p>Sales Analysis</p>
                            </a>
                        </li>
                        @if (new[] { "ACCESS_LEVEL" }.Contains(ViewData["Role"]?.ToString()))
                        {
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-cogs"></i>
                                    <p>
                                        Setup
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="../../Companies/index" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Company Setup</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="../../CompanyUsers/index" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Company User Setup</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper" style="min-height: 1302.4px;">
            <!-- Content Header (Page header) -->
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            @RenderBody()
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.container-fluid -->
            </section>
            <!-- /.content -->  
        </div>

        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Version</b> 2.0.0
            </div>
            <strong>© 2024 POS Manager - <a href="https://fortifiedcitymyanmar.com/">Fortified City</a></strong>
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark" style="display: none;">
            <!-- Control sidebar content goes here -->
        </aside>
        @* <!-- /.control-sidebar -->
        <div id="sidebar-overlay"></div> *@
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/lib/AdminLTE3/plugins/jquery/jquery.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/lib/AdminLTE3/dist/js/adminlte.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/lib/AdminLTE3/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)

</body>
</html>






