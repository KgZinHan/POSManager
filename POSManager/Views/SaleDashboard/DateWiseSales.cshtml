@model IEnumerable<SaleDashboardDbModel>

@{
    ViewData["Title"] = "Date Wise Sales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2 class="display-4"><b>@ViewData["BranchName"]</b></h2>
            </div>
        </div>
        <a class="btn btn-default mt-2" style="background-color: #31849B;color: white" asp-action="Index" asp-controller="SaleDashboard">
            <i class="fas fa-arrow-left"></i>&nbsp;&nbsp;Back
        </a>
    </div>
</section>
<section class="content">
    <div class="card card-gray mt-1">
        <div class="card-body p-1">
            <div class="row mt-3">
                <div class="col-md-12 table-responsive" style="max-height: 500px">
                    <table id="example1" class="table table-bordered dataTable dtr-inline" aria-describedby="example1_info">
                        <thead>
                            <tr style="font-size: 16px">
                                <th>
                                    No.
                                </th>
                                <th>
                                    Date
                                </th>
                                <th>
                                    Sale Amount
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var data in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => data.No)</td>
                                    <td>@Convert.ToDateTime(data.Date).ToString("dd MMM yyyy")</td>
                                    <td style="text-align: right">@Html.DisplayFor(modelItem => data.SaleAmount)</td>
                                    <td style="text-align: center">
                                        <a asp-action="ItemWiseSales" asp-controller="SaleDashboard"
                                           asp-route-name="@ViewData["BranchName"]" asp-route-date="@data.Date" style="color : #31849B">...</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

