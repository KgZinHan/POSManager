@model IEnumerable<SaleDashboardDbModel>

@{
    ViewData["Title"] = "Date Wise Sales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container">
        <div class="row justify-content-between">
            <h3><b>@ViewData["BranchName"]</b></h3>
            <a class="btn btn-default" style="background-color: #31849B;color: white" asp-action="Index" asp-controller="SaleDashboard">
                Back
            </a>
        </div>

    </div>
</section>
<section class="content">
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Date-Wise Sales</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12 table-responsive" style="max-height: 450px">
                        <table id="example1" class="table table-bordered dataTable dtr-inline" aria-describedby="example1_info">
                            <thead>
                                <tr style="font-size: 16px">
                                    <th class="text-center" style="width: 50px">
                                        #
                                    </th>
                                    <th>
                                        Date
                                    </th>
                                    <th>
                                        Sale Amount
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var data in Model)
                                {
                                    <tr>
                                        <td class="text-center">@Html.DisplayFor(modelItem => data.No)</td>
                                        <td>@Convert.ToDateTime(data.Date).ToString("dd-MMM-yyyy")</td>
                                        <td style="text-align: right">@Html.DisplayFor(modelItem => data.SaleAmount)</td>
                                        <td style="text-align: center">
                                            <a asp-action="ItemWiseSales" asp-controller="SaleDashboard"
                                               asp-route-name="@ViewData["BranchName"]" asp-route-date="@data.Date" style="color : #31849B"><i class="fas fa-ellipsis-h"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

