@model IEnumerable<SaleDashboardDbModel>

@{
    ViewData["Title"] = "Item Wise Sales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts
{
    <!-- Custom Js for this form -->
    <script src="~/javascript/SaleDashboard.js"></script>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="display-4" style="color: blue"><b>Date - @ViewData["Date"]</b></h1>
                <h2 class="display-4"><b>@ViewData["BranchName"]</b></h2>
            </div>
        </div>
        <button class="btn btn-default mt-2" style="background-color: #31849B;color: white" onclick="goBack()">
            <i class="fas fa-arrow-left"></i>&nbsp;&nbsp;Back
        </button>
    </div>
</section>
<section class="content">
    <div class="card card-gray mt-1">
        <div class="card-body p-1">
            <div class="row mt-3">
                <div class="col-md-12 table-responsive" style="max-height: 500px">
                    <table id="example1" class="table table-bordered dataTable dtr-inline" aria-describedby="example1_info">
                        <thead>
                            <tr style="font-size: 16px">
                                <th>
                                    No.
                                </th>
                                <th>
                                    Item Desc
                                </th>
                                <th>
                                    Qty
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var data in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => data.No)</td>
                                    <td>@Html.DisplayFor(modelItem => data.ItemDesc)</td>
                                    <td>@Html.DisplayFor(modelItem => data.Qty)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

